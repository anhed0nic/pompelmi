{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "nodenext",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "strict": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
  },
  "include": ["src"]
}