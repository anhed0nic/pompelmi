{
  "name": "@pompelmi/cli",
  "version": "0.1.0",
  "private": false,
  "description": "pompelmi - CLI file scanner",
  "license": "MIT",
  "bin": {
    "pompelmi": "./bin/pompelmi.mjs"
  },
  "scripts": {
    "build": "tsup --no-external pompelmi",
    "dev": "tsup --watch",
    "start": "node dist/index.js --help",
    "preview": "npm pack --dry-run",
    "prepublishOnly": "npm run build && npx -y publint && npm pack --dry-run"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "chokidar": "^3.6.0",
    "picocolors": "^1.0.0",
    "pompelmi": "workspace:*",
    "pretty-bytes": "^6.1.1"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.6.3"
  },
  "type": "module",
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE*",
    "package.json"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
